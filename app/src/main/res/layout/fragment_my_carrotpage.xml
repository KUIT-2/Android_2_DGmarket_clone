<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:src="@drawable/ic_mydaangn_setting_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <androidx.cardview.widget.CardView
        android:id="@+id/iv_user_profile_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#AAAAAA"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="민서"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_profile_image"
        app:layout_constraintStart_toEndOf="@+id/iv_user_profile_image"
        app:layout_constraintTop_toTopOf="@+id/iv_user_profile_image"
        />
    <!--android:fontFamily="@font/inter_bold"-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="80dp"
        android:layout_height="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#dcdcdc"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_profile_image"
        app:layout_constraintTop_toTopOf="@+id/iv_user_profile_image"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 보기"
            android:textSize="11dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="13dp"
            android:textColor="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app1"
        android:layout_width="340dp"
        android:layout_height="106dp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_user_profile_image"
        android:background="@drawable/rectangle"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="56dp"
            android:layout_height="14dp"
            android:src="@drawable/onboarding_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15px"
            android:layout_marginStart="18px"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당근하는 새로운 방법, 당근페이!"
            android:textSize="13dp"
            android:gravity="top"
            app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="@+id/logo"
            app:layout_constraintBottom_toBottomOf="@+id/logo"
            />
        
        <ImageView
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_profile_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="19px"
            app:layout_constraintTop_toTopOf="@+id/logo"
            app:layout_constraintBottom_toBottomOf="@+id/logo"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/charge"
            android:layout_width="143dp"
            android:layout_height="33dp"
            android:backgroundTint="#dcdcdc"
            android:background="@drawable/rectangle"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_marginTop="19dp"
            android:layout_marginStart="18px"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">
            
            <ImageView
                android:id="@+id/plus1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/tab_icon_write_gb_n"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="50dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="9.5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충전"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/plus1"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6.5dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="143dp"
            android:layout_height="33dp"
            android:backgroundTint="#dcdcdc"
            android:background="@drawable/rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="7dp"
            app:layout_constraintTop_toTopOf="@+id/charge"
            app:layout_constraintBottom_toBottomOf="@+id/charge"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/plus2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/tab_icon_write_gb_n"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="42dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="9.5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계좌송금"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/plus2"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6.5dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/recent"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="최근 방문"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/app1"
        android:layout_marginTop="25dp"
        android:textStyle="bold"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appbtn"
        android:layout_width="88dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/recent"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:padding="10dp">
        <View
            android:id="@+id/menu1"
            android:layout_width="68dp"
            android:layout_height="35dp"
            android:background="@drawable/rectangle1"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/menu1_list"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/tab_icon_category_n"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/menu1_list"
            android:text="전체"
            android:textSize="12dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fashion"
        android:layout_width="99dp"
        android:layout_height="33dp"
        android:background="@drawable/rectangle1"
        app:layout_constraintStart_toEndOf="@+id/appbtn"
        app:layout_constraintTop_toTopOf="@+id/appbtn"
        app:layout_constraintBottom_toBottomOf="@+id/appbtn"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남성패션/잡화"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="14dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/woman"
        android:layout_width="73dp"
        android:layout_height="33dp"
        android:background="@drawable/rectangle1"
        app:layout_constraintStart_toEndOf="@+id/fashion"
        android:layout_marginStart="9dp"
        app:layout_constraintTop_toTopOf="@+id/appbtn"
        app:layout_constraintBottom_toBottomOf="@+id/appbtn"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여성의류"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="14dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="99dp"
        android:layout_height="33dp"
        android:background="@drawable/rectangle1"
        app:layout_constraintStart_toEndOf="@+id/woman"
        android:layout_marginStart="9dp"
        app:layout_constraintTop_toTopOf="@+id/appbtn"
        app:layout_constraintBottom_toBottomOf="@+id/appbtn"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가구/인테리어"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="14dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/mylist"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="나의 거래"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/appbtn"
        android:layout_marginTop="25dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/heart"
        android:layout_width="21dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@+id/mylist"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_feed_interest_outline_18"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심목록"
        app:layout_constraintStart_toEndOf="@+id/heart"
        app:layout_constraintTop_toTopOf="@+id/heart"
        app:layout_constraintBottom_toBottomOf="@+id/heart"
        android:layout_marginStart="12dp"
        />

    <ImageView
        android:id="@+id/selllist"
        android:layout_width="21dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@+id/heart"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_community_outline_m"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매내역"
        app:layout_constraintStart_toEndOf="@+id/selllist"
        app:layout_constraintTop_toTopOf="@+id/selllist"
        app:layout_constraintBottom_toBottomOf="@id/selllist"
        android:layout_marginStart="12dp"
        />

    <ImageView
        android:id="@+id/buylist"
        android:layout_width="21dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@+id/selllist"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_voucher_outline_m"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구매내역"
        app:layout_constraintStart_toEndOf="@+id/buylist"
        app:layout_constraintTop_toTopOf="@+id/buylist"
        app:layout_constraintBottom_toBottomOf="@id/buylist"
        android:layout_marginStart="12dp"
        />

    <ImageView
        android:id="@+id/moneylist"
        android:layout_width="21dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@+id/buylist"
        android:layout_marginTop="24dp"
        android:src="@drawable/btn_favorite_text_for_post"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중고거래 가계부"
        app:layout_constraintStart_toEndOf="@+id/moneylist"
        app:layout_constraintTop_toTopOf="@+id/moneylist"
        app:layout_constraintBottom_toBottomOf="@id/moneylist"
        android:layout_marginStart="12dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/moneylist"
        android:layout_marginTop="22dp"
        android:background="#dcdcdc"
        />

    <TextView
        android:id="@+id/mytownlife"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="나의 동네생활"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/moneylist"
        android:layout_marginTop="42dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/townlist"
        android:layout_width="21dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@+id/mytownlife"
        android:layout_marginTop="24dp"
        android:src="@drawable/btn_favorite_text_for_post"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동네생활 글/댓글"
        app:layout_constraintStart_toEndOf="@+id/townlist"
        app:layout_constraintTop_toTopOf="@+id/townlist"
        app:layout_constraintBottom_toBottomOf="@id/townlist"
        android:layout_marginStart="12dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/townlist"
        android:layout_marginTop="22dp"
        android:background="#dcdcdc"
        />

    <TextView
        android:id="@+id/townstore"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="동네 가게"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/townlist"
        android:layout_marginTop="42dp"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>
