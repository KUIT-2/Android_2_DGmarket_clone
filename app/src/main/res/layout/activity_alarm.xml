<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_top_appbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:padding="15dp">

            <ImageView
                android:id="@+id/tv_alarm_previous_arrow"
                android:layout_height="25dp"
                android:layout_width="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow_left" />

            <TextView
                android:id="@+id/tv_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="알림"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_alarm_previous_arrow"/>

            <TextView
                android:id="@+id/iv_home_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#808080"
                android:text="편집"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/cl_alarm_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cl_top_appbar2"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            app:layout_constraintHorizontal_weight="@integer/material_motion_duration_long_1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b_action_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#00ff0000"
                    android:text="활동 알림"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/line1_1"
                    android:layout_width="match_parent"
                    android:layout_height="1.8dp"
                    android:layout_marginTop="53dp"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/b_keyword_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#00ff0000"
                    android:text="키워드 알림"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    />

                <View
                    android:id="@+id/line1_2"
                    android:layout_width="match_parent"
                    android:layout_height="1.8dp"
                    android:layout_marginTop="53dp"
                    android:background="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_alarm_status"
            android:layout_marginBottom="10dp"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_alarm1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_item_alarm_thumbnail_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_8" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/tv_item_alarm_contents_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_item_alarm_thumbnail_1"
                app:layout_constraintTop_toTopOf="@id/iv_item_alarm_thumbnail_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="노나니노나님, 아직 당근마켓 새 이름을 모르시나요? 👀 "
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="새로워진 당신 근처의 'OO'를 만나보세요."
                    android:textColor="#808080"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    style="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4일 전"
                    android:textColor="#808080"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_alarm2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_alarm1">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_item_alarm_thumbnail_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="100dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_8" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/tv_item_alarm_contents_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_item_alarm_thumbnail_2"
                app:layout_constraintTop_toTopOf="@id/iv_item_alarm_thumbnail_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="나눔의 날 오늘의 소식 그리운 추억편📷 "
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="니나노나님께 소중한 나눔으로 추억을 꺼내어 준 사연 전해요💌"
                    android:textColor="#808080"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    style="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 전"
                    android:textColor="#808080"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_alarm3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_alarm2">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_item_alarm_thumbnail_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="100dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_8" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/tv_item_alarm_contents_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_item_alarm_thumbnail_3"
                app:layout_constraintTop_toTopOf="@id/iv_item_alarm_thumbnail_3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="지금 새로원진 '당근'을 만나보세요🥕 "
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="노나노나님, 당근마켓의 새 이름 새 로고를 소개할게요!"
                    android:textColor="#808080"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    style="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 전"
                    android:textColor="#808080"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_alarm4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_alarm3">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_item_alarm_thumbnail_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="100dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_8" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/tv_item_alarm_contents_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_item_alarm_thumbnail_4"
                app:layout_constraintTop_toTopOf="@id/iv_item_alarm_thumbnail_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="나눔의 날 오늘의 소식 장마철 장화편☂️ "
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="노나노나님께 소중한 나눔으로 뽀송한 장마철을 보낸 사연 전해요💌"
                    android:textColor="#808080"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    style="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1주 전"
                    android:textColor="#808080"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_alarm5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_alarm4">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_item_alarm_thumbnail_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="100dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_8" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/tv_item_alarm_contents_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_item_alarm_thumbnail_5"
                app:layout_constraintTop_toTopOf="@id/iv_item_alarm_thumbnail_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="💌7월 가계부가 도착했어요!  "
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#당근마켓 #당근가계부 #자원재순환 #따뜻한 거래"
                    android:textColor="#808080"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    style="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1달 전"
                    android:textColor="#808080"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_alarm6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_alarm5">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_item_alarm_thumbnail_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="100dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_8" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/tv_item_alarm_contents_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_item_alarm_thumbnail_6"
                app:layout_constraintTop_toTopOf="@id/iv_item_alarm_thumbnail_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="마라탕 먹고 싶다 "
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닭발, 불닭봈음면, 등촌샤브샤브 먹고싶다"
                    android:textColor="#808080"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    style="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="바로 지금"
                    android:textColor="#808080"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>