<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_item"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/iv_item_home_thumbnail"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="10dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_product_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sonny"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/tv_item_home_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/iv_item_home_thumbnail"
        app:layout_constraintTop_toTopOf="@id/iv_item_home_thumbnail">

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="토트넘의 수장 손흥민!"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_product_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토트넘 홋스퍼"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="700억"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_home_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/ll_item_home_like"
        app:layout_constraintEnd_toStartOf="@id/ll_item_home_like">

        <ImageView
            android:id="@+id/iv_item_home_comment"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/icon_chat_count"/>

        <TextView
            android:id="@+id/tv_item_home_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_home_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_item_home_like"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/ic_heart_outline_s"/>

        <TextView
            android:id="@+id/tv_item_home_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="12dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>