<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl.top.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_location"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="조원 2동"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_region_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_expand_more_outline_18"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_location"/>

        <ImageView
            android:id="@+id/iv_home_alarm"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_home_alarm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_home_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/icon_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_home_alarm"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/iv_home_menu"
            android:layout_width="21dp"
            android:layout_height="17dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/ic_home_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_home_search" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl.top.appbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line">

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_item_home_thumbnail_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tab_icon_home_p"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/tv_item_home_contents_1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iv_item_home_thumbnail_1"
            app:layout_constraintTop_toTopOf="@id/iv_item_home_thumbnail_1"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="저한텐 안어울리네요. 새거예요"
                android:maxLines="2"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울시 동대문구 58초 전" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19,800원"
                style="bold"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_home_more_1"
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/ic_more_vert_ountline_24"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_home_comment"
            app:layout_constraintTop_toTopOf="@+id/iv_item_home_comment"
            tools:ignore="NotSibling" />

        <LinearLayout
            android:id="@+id/ll_item_home_comment_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/ll_item_home_like_1"
            app:layout_constraintEnd_toStartOf="@id/ll_item_home_like_1">

            <ImageView
                android:id="@+id/iv_item_home_comment"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/tab_icon_chat_n" />

            <TextView
                android:id="@+id/tv_item_home_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_home_like_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            >

            <ImageView
                android:id="@+id/iv_item_home_like"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_like_count" />
            <TextView
                android:id="@+id/tv_item_home_like_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="12dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_item1">

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_item_home_thumbnail_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
