                android:src="@drawable/tab_icon_home_p" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/tv_item_home_contents_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_home_thumbnail_2"
            app:layout_constraintTop_toTopOf="@id/iv_item_home_thumbnail_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="저한텐 안어울리네요. 새거예요"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울시 동대문구 58초 전" />

            <TextView
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19,800원" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_home_more_2"
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/ic_more_vert_ountline_24"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_home_comment"
            app:layout_constraintTop_toTopOf="@+id/iv_item_home_comment"
            tools:ignore="NotSibling" />

        <LinearLayout
            android:id="@+id/ll_item_home_comment_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/ll_item_home_like_2"
            app:layout_constraintEnd_toStartOf="@id/ll_item_home_like_2">

            <ImageView
                android:id="@+id/iv_item_home_comment_2"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:src="@drawable/tab_icon_chat_n" />

            <TextView
                android:id="@+id/tv_item_home_comment_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_home_like_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            >

            <ImageView
                android:id="@+id/iv_item_home_like_2"
                android:layout_width="15dp"
                android:layout_height="13dp"
                android:src="@drawable/icon_like_count" />

            <TextView
                android:id="@+id/tv_item_home_like_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_item2">

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_item_home_thumbnail_3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cardCornerRadius="10dp"
