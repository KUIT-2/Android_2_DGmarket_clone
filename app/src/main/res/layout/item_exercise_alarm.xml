<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_thumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="1000dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_item_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_item_thumbnail_1"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_item_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/cv_item_thumbnail">

        <TextView
            android:id="@+id/tv_exercise_alarm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="땡땡땡땡땡님, 아직 당근마켓 새 이름을 모르시나요?"
            android:textColor="@color/gray_900"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_exercise_alarm_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="새로워진 당신 근처의 '00'을 만나보세요"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_exercise_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="1주전"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>