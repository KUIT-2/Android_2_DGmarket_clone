<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl.top.appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="18dp"
                android:layout_marginStart="15dp"
                android:layout_width="64dp"
                android:layout_height="19dp">

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="45dp"
                    android:layout_height="19dp"
                    android:text="화양동"
                    android:textSize="15dp"

                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
    
                <ImageView
                    android:id="@+id/iv_region_arrow"
                    android:paddingStart="5dp"
                    android:layout_width="14dp"
                    android:layout_height="8dp"
                    android:src="@drawable/icon_arrow_down_s"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_location"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="111dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="15dp"
                >
                <ImageView
                    android:id="@+id/iv_home_alarm"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_home_alarm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
    
                <ImageView
                    android:id="@+id/iv_home_search"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="27dp"
                    android:src="@drawable/icon_search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_home_alarm"
                    app:layout_constraintTop_toTopOf="parent" />
    
                <ImageView
                    android:id="@+id/iv_home_menu"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="27dp"
                    android:src="@drawable/ic_home_menu"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_home_search"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_news"
            android:backgroundTint="#F2F3F7"
            android:background="@drawable/box_round_shape"
            android:layout_width="330dp"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl.top.appbar"
            android:layout_height="64dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="260dp"
                android:layout_height="34dp"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="14dp"
                >

                <TextView
                    android:id="@+id/tv_new_letter"
                    android:layout_width="36dp"
                    android:layout_height="16dp"
                    android:fontFamily="@font/inter_extrabold"
                    android:gravity="center"
                    android:text="새소식"
                    android:textColor="@color/black"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_7_feature"
                    android:layout_width="221dp"
                    android:layout_height="16dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="더 편리해진 7가지 기능 개선을 소개해요!"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/black"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintStart_toEndOf="@+id/tv_new_letter"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_2023"
                    android:layout_width="82dp"
                    android:layout_height="16dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="(2023 상반기)"
                    android:textColor="@color/black"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:layout_marginRight="19dp"
                android:src="@drawable/icon_post_article_more"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_item1"
            android:layout_width="360dp"
            android:layout_height="134dp"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_news">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_item_home_thumbnail_1"
                android:layout_width="102dp"
                android:layout_height="102dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/image" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/tv_item_home_contents_1"
                android:layout_width="198dp"
                android:layout_height="59dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="31dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_item_home_thumbnail_1"
                app:layout_constraintTop_toTopOf="@id/iv_item_home_thumbnail_1">

                <TextView
                    android:layout_width="198dp"
                    android:layout_height="17dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="생귤탱귤 제주 감귤 판매 🍊"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:autoSizeTextType="uniform"
                    android:textColor="#8B8C90"
                    android:layout_marginTop="5dp"
                    android:text="서귀포시 • 끌올 1분 전" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="20,000원" />
            </LinearLayout>
            
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="17dp"
                android:layout_width="49dp"
                android:layout_height="15dp">

                <LinearLayout
                    android:id="@+id/ll_item_home_comment_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent
">
    
                    <ImageView
                        android:id="@+id/iv_item_home_comment"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/tab_icon_chat_n" />
    
                    <TextView
                        android:id="@+id/tv_item_home_comment"
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:text="6"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
    
                </LinearLayout>
    
                <LinearLayout
                    android:id="@+id/ll_item_home_like_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
    
                    >
    
                    <ImageView
                        android:id="@+id/iv_item_home_like"
                        android:layout_width="13dp"
                        android:layout_height="11dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/icon_like_count" />
    
                    <TextView
                        android:id="@+id/tv_item_home_like_1"
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
    
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:elevation="20dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/btn_round_shape"
        android:backgroundTint="#FF6F0F"
        android:drawableLeft="@drawable/btn_plus"
        android:text="글쓰기"
        android:fontFamily="@font/inter_extrabold"
        android:autoSizeTextType="uniform"
        android:textColor="@color/white"
        android:paddingLeft="13dp"
        android:paddingRight="19dp"
        android:paddingTop="13dp"
        android:paddingBottom="14dp"
        android:layout_margin="14dp"
        >

    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>